# ================================
# RenoAI - Configuration Environnement
# ================================
# Copier ce fichier en .env et ajuster les valeurs

# ================================
# SERVEUR
# ================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ================================
# BASE DE DONNÃ‰ES
# ================================
DATABASE_PATH=./data/renoai.db

# ================================
# AUTHENTIFICATION JWT
# ================================
JWT_SECRET=votre-secret-jwt-super-securise-changez-moi
JWT_REFRESH_SECRET=votre-refresh-secret-super-securise-changez-moi
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# UPLOAD DE FICHIERS
# ================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ================================
# CORS
# ================================
CORS_ORIGIN=http://localhost:3000

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ================================
# LOGS
# ================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ================================
# API IA EXTERNE (optionnel)
# ================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
